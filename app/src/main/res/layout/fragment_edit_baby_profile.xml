<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/blue_backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/back_arrow_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/gray_line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/parent_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"
                android:textSize="26sp"
                android:textAlignment="center"
                android:text="Add Baby Profile"
                android:layout_marginTop="10dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/add_baby_pfp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/homelander"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#C2D6F6"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/add_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:civ_circle_background_color="#FDD3DB"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FFFFFF"
                    android:src="@drawable/pencil"
                    android:elevation="4dp"
                    android:layout_alignRight="@id/add_baby_pfp"
                    android:layout_alignBottom="@id/add_baby_pfp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp"
                android:padding="15dp"
                android:background="@drawable/white_rect_fully_rounded_lines">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#767676"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/inputname"
                    android:layout_width="330dp"
                    android:layout_height="25dp"
                    android:textSize="18sp"
                    android:text="18sp"
                    android:background="@drawable/white_rect_blue_line_below"
                    android:layout_marginBottom="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth (YYYY-MM-DD)"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#767676"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/inputbirthday"
                    android:layout_width="330dp"
                    android:layout_height="25dp"
                    android:textSize="18sp"
                    android:text="18sp"
                    android:background="@drawable/white_rect_blue_line_below"
                    android:layout_marginBottom="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height (cm)"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#767676"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/inputheight"
                    android:layout_width="330dp"
                    android:layout_height="25dp"
                    android:textSize="18sp"
                    android:text="18sp"
                    android:background="@drawable/white_rect_blue_line_below"
                    android:layout_marginBottom="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight (kg)"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#767676"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/inputweight"
                    android:layout_width="330dp"
                    android:layout_height="25dp"
                    android:textSize="18sp"
                    android:text="18sp"
                    android:background="@drawable/white_rect_blue_line_below"
                    android:layout_marginBottom="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Type"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#767676"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/inputblood"
                    android:layout_width="330dp"
                    android:layout_height="25dp"
                    android:textSize="18sp"
                    android:text="18sp"
                    android:background="@drawable/white_rect_blue_line_below"
                    android:layout_marginBottom="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allergies"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#767676"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/allergy_list2"
                    android:layout_height="wrap_content"
                    android:layout_width="330dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/interbold"
                    android:id="@+id/new_allergy"
                    android:layout_height="wrap_content"
                    android:layout_width="330dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/white_rect_blue_line_below"/>

                <Button
                    android:id="@+id/add_allergy"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#767676"
                    android:text="Add More"
                    android:fontFamily="@font/interbold"

                    android:background="@drawable/white_rect_fully_rounded_lines"/>





            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="165dp"
                    android:layout_height="50dp"
                    android:background="@drawable/signin_submit"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:fontFamily="@font/interbold"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>



            </LinearLayout>






        </LinearLayout>




    </ScrollView>

</LinearLayout>