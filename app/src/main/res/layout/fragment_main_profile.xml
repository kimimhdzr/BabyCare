<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topview"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/white_rect_gray_line"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/back_arrow_icon"
            android:layout_marginLeft="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/parent_profile_pfp"
        app:layout_constraintTop_toBottomOf="@id/topview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/homelander"
        app:civ_border_width="5dp"
        app:civ_border_color="#C2D6F6"
        />

    <TextView
        android:id="@+id/parent_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="Mommy Lan"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/parent_profile_pfp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout

        android:id="@+id/profile_manage_btn"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:background="@drawable/white_rect_fully_rounded_lines"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:paddingStart="25dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parent_profile_name">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/home">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Manage Children"
            android:textSize="20sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="35dp"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/back_arrow_icon"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:rotation="180"
            >

        </ImageButton>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_setting_btn"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:background="@drawable/white_rect_fully_rounded_lines"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingStart="25dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_manage_btn">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="20sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="35dp"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/back_arrow_icon"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:rotation="180"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_edit_btn"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:background="@drawable/white_rect_fully_rounded_lines"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingStart="25dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_setting_btn">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="35dp"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/back_arrow_icon"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:rotation="180">

        </ImageButton>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>